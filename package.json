{
  "name": "noc-project",
  "version": "1.0.0",
  "description": "Network Operations Center - Sistema de monitoreo y logging de servicios",
  "main": "dist/app.js",
  "scripts": {
    "db": "json-server --watch db.json",
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js"
  },
  "keywords": [
    "monitoring",
    "logging",
    "network-operations",
    "cron",
    "typescript",
    "nodejs"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "cron": "^4.3.3",
    "dotenv": "^17.2.1",
    "env-var": "^7.5.0",
    "json-server": "^1.0.0-beta.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
